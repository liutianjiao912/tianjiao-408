{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": false,
    "inlineSourceMap": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
